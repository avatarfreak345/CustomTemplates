        "UpdateSourceData": "https://raw.githubusercontent.com/avatarfreak345/CustomTemplates/refs/heads/main/space-engineers-torchwinescript.sh",
        "UpdateSourceArgs": "winescript.sh",
        "UpdateSourceTarget": "{{$FullInstanceDir}}",
        "OverwriteExistingFiles": true
    },
    {
        "UpdateStageName": "Install Windows Components",
        "UpdateSourcePlatform": "Linux",
        "UpdateSource": "Executable",
        "UpdateSourceData": "/bin/bash",
        "UpdateSourceArgs": "./winescript.sh",
        "SkipOnFailure": false
    }
