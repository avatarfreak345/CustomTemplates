        "UpdateSourceTarget": "{{$FullBaseDir}}servers",
        "UpdateSourceArgs": "SpaceEngineers-Dedicated.cfg",
        "OverwriteExistingFiles": false
    },
    {
        "UpdateStageName": "TorchAPI Download",
